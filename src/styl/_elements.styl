.tags
    margin-top rem(30px)
    a
        font-size rem(14px)
        color main
        display inline-block
        border 1px solid main
        border-radius rem(5px)
        padding rem(4px) rem(10px)
        margin-right rem(2px)
        margin-bottom rem(8px)
        text-decoration none
        &:hover
            color hover
            border 1px solid hover

.img-rounded
    border-radius 50%

.about-me-info
    background  #5d4d7a;
    height 100%;
    padding-top: 40px;
    .question
        display inline;
        text-align center;
        .question-content
            font-size 20px;
            font-family fantasy;
    .answer-container
        margin-top 45px;
        align-items center;
        display flex;
        flex-direction row;
        justify-content center;
        font-size 20px;
        font-family fantasy;
    .tip-message-container
        color green
        font-size 18px


.aboutme
    .recent
        list-style none
    .post-title
        &:before
            content ""
    h2
        &:hover
            background-color mainHover
    li
      h3
        font-size rem(20px)
        margin-bottom 7px
        position relative
        &:before
          content "|>"
          font-size rem(20px)
          color black
          position absolute
          left -10px
          transition all .2s
        &:hover
          &:before
            transform translateX(-10px)
